generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id String @id

  squeals   Squeal[]
  receivers Receiver[]

  role              UserRole @default(Regular)
  quota             Int      @default(3000)
  dailyQuotaLimit   Int      @default(3000)
  weeklyQuotaLimit  Int      @default(20000)
  monthlyQuotaLimit Int      @default(75000)

  @@map("users")
}

enum UserRole {
  Regular
  Premium
}

model Squeal {
  id        String   @id @default(cuid())
  content   Json
  createdAt DateTime @default(now())

  author     User       @relation(fields: [authorId], references: [id])
  authorId   String
  mentions   Mention[]
  receiver   Receiver   @relation(fields: [receiverId], references: [id])
  receiverId String
  channel    Channel    @relation(fields: [channelId], references: [id])
  channelId  String
  reactions  Reaction[]

  @@index([channelId])
  @@index([authorId])
  @@index([receiverId])
  @@map("squeals")
}

model Channel {
  id        String      @id @default(cuid())
  name      String
  ownerId   String
  type      ChannelType
  squeals   Squeal[]
  receivers Receiver[]

  @@map("channels")
}

enum ChannelType {
  Private
  Public
}

model Receiver {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  channel   Channel? @relation(fields: [channelId], references: [id])
  channelId String?
  Squeal    Squeal[]

  @@index([userId])
  @@index([channelId])
  @@map("receivers")
}

model Mention {
  id       Int     @id @default(autoincrement())
  squeal   Squeal? @relation(fields: [squealId], references: [id])
  squealId String?

  @@index([squealId])
  @@map("mentions")
}

model Reaction {
  userId   String
  squeal   Squeal       @relation(fields: [squealId], references: [id])
  squealId String
  type     ReactionType

  @@id([userId, squealId])
  @@index([squealId])
  @@map("reactions")
}

enum ReactionType {
  Like
  Dislike
}
